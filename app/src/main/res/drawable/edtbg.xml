<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF"/>

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#6200EE" />

    <!-- Corner radius -->
    <corners android:radius="15dp" />

    <!-- Optional padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
